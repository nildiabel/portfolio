<script>
  const text = "Desarrollo de Aplicaciones Multiplataforma";
  const element = document.getElementById("typewriter");
  let i = 0;
  let deleting = false;

  function type() {
    if (!deleting) {
      element.textContent = text.slice(0, i++);
      if (i > text.length) {
        deleting = true;
        setTimeout(type, 2000); // espera antes de borrar
        return;
      }
    } else {
      element.textContent = text.slice(0, --i);
      if (i === 0) {
        deleting = false;
      }
    }
    setTimeout(type, deleting ? 50 : 100); // velocidad de escritura/borrado
  }

  type();
</script>
