---
import Nav from "../components/Nav.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Project from "../components/Project.astro";
import Footer from "../components/Footer.astro";
import UsedTech from "../components/UsedTech.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #1a1a1a;
        color: #ffffff;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .container {
        width: 100%;
        max-width: 1200px;
        padding: 0 1rem;
        margin: 0 auto;
        box-sizing: border-box;
      }

      main {
        border-radius: 1rem;
        margin-top: 3rem;
      }

      h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #ffffff;
      }

      p {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #ccc;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <Nav activePage="home" />
      <main>
        <About />
        <Project />
        <UsedTech />
      </main>
      <Footer />
    </div>
  </body>
</html>
